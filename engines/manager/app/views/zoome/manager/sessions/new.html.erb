<div class="page-single">
  <div class="container">
    <div class="row">
      <div class="col col-login mx-auto">
        <div class="text-center mb-6">
          <h3>Zoome</h3>
        </div>
        <%= form_with scope: :session, class: 'card' do |f| %>
          <div class="card-body p-6">
            <div class="card-title">Connectez vous</div>

            <div class="form-group">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'Adresse email' %>
            </div>
            <div class="form-group">
              <%= f.label :password, 'Mot de passe', class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'Mot de passe' %>
            </div>
            <div class="form-footer">
              <button type="submit" class="btn btn-primary btn-block">Connexion</button>
            </div>
          </div>
        <% end %>

        <div class="text-center text-muted">
          Don't have account yet? <a href="./register.html">Sign up</a>
        </div>
      </div>
    </div>
  </div>
</div>
